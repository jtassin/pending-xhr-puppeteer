{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "build",
    "module": "ES2015",
    "target": "es5",
    "lib": ["ES2015"],
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "build", "jest.setup.ts"],
  "types": ["typePatches"]
}
